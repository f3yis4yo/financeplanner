#:kivy 2.3.1

<DashboardScreen>:
    name: 'dashboard_screen'
    GridLayout:
        cols: 3
        spacing: 10
        padding: 10
        canvas.before:
            Color:
                rgba: 0.83, 0.83, 0.83, 1
            Rectangle:
                pos: self.pos
                size: self.size
        column_minimum: 0, self.width * 0.10, self.width * 0.80, self.width * 0.10

        # Row A: Title
        Label:
            text: ""
        Label:
            text: 'BudgieBudget'
            halign: 'center'
            color: 0, 0, 0, 1
            bold: True
            font_size: 24
        Label:
            text: ""

        # Row B: Subtitle
        Label:
            text: ""
        Label:
            text: 'Dashboard'
            halign: 'center'
            font_name: 'Arial'
            font_size: 18
            bold: True
            color: 0, 0, 0, 1
        Label:
            text: ""

        # Row C: Greeting
        Label:
            text: ''
