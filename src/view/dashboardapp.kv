            id: greeting_label
            text: f'Hello, {root.username}'
            halign: 'left'
            font_name: 'Arial'
            font_size: 15
            color: 0, 0, 0, 1
        Label:
            text: ''

        # Row D: Total Balance box
        Label:
            text: ""
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]
            Label:
                text: 'Total Balance'
                font_size: 14
                halign: 'left'
                color: 0.2, 0.4, 1, 1
            Label:
