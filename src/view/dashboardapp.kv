#:kivy 2.3.1
<DashboardScreen>:
    GridLayout:
        rows: 14

        # App background color
        canvas.before:
            Color: 
                rgba: 0.83, 0.83, 0.83, 1
            Rectangle:
                size: self.size
                pos: self.pos

        # Row A: Title "BudgieBudget"
        GridLayout:
            cols: 1
            size_hint_y: None
            height: dp(40)
            Label:
                text: 'BudgieBudget'
                halign: 'center'
                color: 0, 0, 0, 1
                bold: True
                font_size: 24

        # Row B: Subtitle "Dashboard"
        GridLayout:
            cols: 1
            size_hint_y: None
            height: dp(30)
            Label:
                text: 'Dashboard'
                halign: 'center'
                font_name: 'Arial'
                font_size: 18
                bold: True
                color: 0, 0, 0, 1

        # Row C: C1 Hello @username!, C3 Settings button
        GridLayout:
            cols: 10
            size_hint_y: 0.5
            height: dp(30)
            Label:
                text: ''
            Label:
                text: 'Hello @Agustin!'
                halign: 'left'
                font_name: 'Arial'
                font_size: 15
                color: 0, 0, 0, 1
            Label:
                text: ''
            Label:
                text: ''
            Label:
                text: ''
            Label:
                text: ''
            Label:
                text: ''
            Label:
                text: ''
            Label:
                text: ''
                

        # Row D: Total Balance box
        GridLayout:
            cols: 1
            size_hint_y: None
            height: dp(80)
            BoxLayout:
                orientation: 'vertical'
                padding: 4
                size_hint: 1, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
                Label:
                    text: 'Total Balance'
                    font_size: 14
                    halign: 'left'
                    color: 0.2, 0.4, 1, 1
                Label:
                    text: '$1,000'
                    font_size: 22
                    bold: True
                    halign: 'right'
                    color: 0, 0, 0, 1

        # Space
        Label:
            size_hint_y: None
            height: dp(10)

        # Row E: Main buttons
        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(30)
            padding: dp(20), 0, dp(20), 0
            size_hint_y: None
            height: dp(110)
            Button:
                text: "âž•\nAdd \nExpense"
                font_size: 15
                halign: 'center'
                valign: 'middle'
                background_normal: ''
                background_color: 59/255, 130/255, 246/255, 1
                color: 1, 1, 1, 1
                size_hint: None, None
                size: dp(100), dp(100)
                on_press: root.manager.current = 'expenses_screen'
                canvas.before:
                    Color:
                        rgba: 59/255, 130/255, 246/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
            Button:
                text: "ðŸ’°\nSet \nBudget"
                font_size: 15
                halign: 'center'
                valign: 'middle'
                background_normal: ''
                background_color: 34/255, 211/255, 238/255, 1
                color: 1, 1, 1, 1
                size_hint: None, None
                size: dp(100), dp(100)
                on_press: root.manager.current = 'budget_screen'
                canvas.before:
                    Color:
                        rgba: 34/255, 211/255, 238/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
            Button:
                text: "ðŸ“Š\nView \nReports"
                font_size: 15
                halign: 'center'
                valign: 'middle'
                background_normal: ''
                background_color: 251/255, 191/255, 36/255, 1
                color: 1, 1, 1, 1
                size_hint: None, None
                size: dp(100), dp(100)
                on_press: root.manager.current = 'report_kv_path'
                canvas.before:
                    Color:
                        rgba: 251/255, 191/255, 36/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]

        # Space
        Label:
            size_hint_y: None
            height: dp(30)

        # Row F: Recent Expenses Subtitle
        GridLayout:
            cols: 3
            size_hint_y: None
            height: dp(30)
            Label:
                text: ''
            Label:
                text: 'Recent Expenses'
                font_size: 18
                bold: True
                color: 0, 0, 0, 1
            Label:
                text: ''

        # Row G: Recent Expenses box
        GridLayout:
            cols: 1
            size_hint_y: None
            height: dp(60)
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, 1
                padding: 8
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
                Label:
                    text: 'Groceries: $50'
                    font_size: 13
                    color: 0, 0, 0, 1
                Label:
                    text: 'Transport: $20'
                    font_size: 13
                    color: 0, 0, 0, 1

        # Row H: Notifications Subtitle
        GridLayout:
            cols: 3
            Label:
                text: ''
            Label:
                text: 'Notifications'
                font_size: 18
                bold: True
                color: 0, 0, 0, 1
            Label:
                text: ''

        # Row I: Notifications box
        GridLayout:
            cols: 1
            size_hint_y: None
            height: dp(60)
            BoxLayout:
                orientation: 'vertical'
                padding: 8
                size_hint: 1, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
                Label:
                    id: notification_label # Example ID
                    text: 'No notifications at this time.'
                    font_size: 13
                    color: 0, 0, 0, 1

        # Space
        Label:
            size_hint_y: None
            height: dp(10)

        # Row K: Logout button
        GridLayout:
            cols: 3
            Label:
                text: ''
            Button:
                text: 'Logout'
                font_size: 16
                background_normal: ''
                background_color: 248/255, 113/255, 113/255, 1
                color: 1, 1, 1, 1
                on_press: root.manager.current = 'login_screen'
                canvas.before:
                    Color:
                        rgba: 248/255, 113/255, 113/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]
            Label:
                text: ''

        # Row L: Year 2025
        BoxLayout:
            size_hint_y: None
            height: dp(30)
            Label:
                text: ''
            Label:
                text: '2025'
                color: 0, 0, 0, 1
                halign: 'center'
            Label:
                text: ''